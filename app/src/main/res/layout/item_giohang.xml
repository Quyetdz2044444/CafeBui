<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_giohang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvten_giohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvgia_giohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Giá:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDecrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="decreaseQuantity"
                android:src="@drawable/giam" />

            <TextView
                android:id="@+id/tvSelectedQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="1"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnIncrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="increaseQuantity"
                android:src="@drawable/tang" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvsize_giohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Size :"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvtongtien_itemgiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tổng tiền :"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_weight="1"
        android:id="@+id/btnxoa_gioHang"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/xoa" />

</LinearLayout>
