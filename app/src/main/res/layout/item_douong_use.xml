<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/cafebacxiu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvma_doUong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="ID:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvten_doUong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tên:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/shop_24" />

            <TextView
                android:id="@+id/tvslban_doUong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/like_24" />

                <TextView
                    android:id="@+id/tvslyeuthich_doUong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvsize_doUong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Size:"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvkho_doUong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Kho:"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvgia_doUong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Giá:"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnhuydon_doUong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy đơn"
        android:textSize="25dp"
        android:backgroundTint="#FFC107"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />

</LinearLayout>