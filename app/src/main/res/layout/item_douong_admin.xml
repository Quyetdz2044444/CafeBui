<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item"
    android:gravity="center"
    android:orientation="horizontal"
    >


        <ImageView
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:src="@drawable/cafebacxiu" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvma_doUong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="ID:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvten_doUong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tên:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvsize_doUong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Size:"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvkho_doUong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Kho:"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvgia_doUong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Giá:"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/btnxoa_doUong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xoa"
            android:layout_gravity="bottom"/>

</LinearLayout>