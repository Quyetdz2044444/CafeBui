<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvmadh_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn: 1"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvtenkh_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên kh"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvSoLuong_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvgia_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $10.00"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvngay_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày :"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvtrangthai_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái :"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvchitiet_donhang_admin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/infodonhang"
                android:gravity="center"
                android:text="Chi tiết" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdate_donhang_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFC107"
            android:text="Cập nhật" />

        <Button
            android:id="@+id/btnxacnhan_donhang_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#3F51B5"
            android:text="Xác nhận"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
